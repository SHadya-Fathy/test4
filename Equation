#include <iostream>
using namespace std;
int power(int base, int exponent) {
    int result = 1;
    for (int i = 0; i < exponent; ++i) {
        result *= base;
    }
    return result;
}

int main() {
    int X, N;
    cin >> X >> N;

    int S = -1;

    for (int i = 0; i <= N; i += 2) {
        if (i == 0) {
            S += power(X, 0);
        } else {
            S += power(X, i);
        }
    }

    cout << S << endl;

    return 0;
}
